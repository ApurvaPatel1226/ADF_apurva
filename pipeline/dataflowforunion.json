{
	"name": "dataflowforunion",
	"properties": {
		"activities": [
			{
				"name": "Data flow1",
				"type": "ExecuteDataFlow",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "UnionDataflow",
						"type": "DataFlowReference",
						"datasetParameters": {
							"sourceADLSfile1": {
								"Folder_Name": {
									"value": "@pipeline().parameters.foldername",
									"type": "Expression"
								},
								"File_Name": {
									"value": "@pipeline().parameters.filnameS1",
									"type": "Expression"
								}
							},
							"sourceADLSfile2": {
								"Folder_Name": {
									"value": "@pipeline().parameters.foldername",
									"type": "Expression"
								},
								"File_Name": {
									"value": "@pipeline().parameters.filnameS2",
									"type": "Expression"
								}
							},
							"sinktoUnionResults": {
								"Folder_Name": {
									"value": "@pipeline().parameters.folderunion",
									"type": "Expression"
								},
								"File_Name": {
									"value": "@pipeline().parameters.fileunion",
									"type": "Expression"
								}
							}
						}
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			}
		],
		"parameters": {
			"foldername": {
				"type": "string",
				"defaultValue": "conatinerx"
			},
			"filnameS1": {
				"type": "string",
				"defaultValue": "employeePay.txt"
			},
			"filnameS2": {
				"type": "string",
				"defaultValue": "ITdepartEmp.txt"
			},
			"folderunion": {
				"type": "string",
				"defaultValue": "unionfiles"
			},
			"fileunion": {
				"type": "string",
				"defaultValue": "Unionfiles.csv"
			}
		},
		"annotations": []
	}
}