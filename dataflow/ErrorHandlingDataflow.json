{
	"name": "ErrorHandlingDataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DSADLSFinalOutput",
						"type": "DatasetReference"
					},
					"name": "sourcedatafromfinalfolder",
					"description": "sourcedatafromfinalfolder"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DSforErroRowinEmployeeErrolog",
						"type": "DatasetReference"
					},
					"name": "sinkforErrorRow"
				}
			],
			"transformations": [
				{
					"name": "ErrorRow",
					"description": "Add cases to distribute the data in multiple groupsErrorRow"
				},
				{
					"name": "addfilename"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EMPLOYEE_ID as string,",
				"          FIRST_NAME as string,",
				"          LAST_NAME as string,",
				"          EMAIL as string,",
				"          HIRE_DATE as string,",
				"          SALARY as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourcedatafromfinalfolder",
				"sourcedatafromfinalfolder split(isNull(toDate(HIRE_DATE,'dd-mm-yy')),",
				"     disjoint: false) ~> ErrorRow@(ErrorRow, goodrows)",
				"ErrorRow@ErrorRow derive(filename = 'employeesErr.csv') ~> addfilename",
				"addfilename sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          EMPLOYEE_ID as integer,",
				"          FIRST_NAME as string,",
				"          LAST_NAME as string,",
				"          EMAIL as string,",
				"          HIRE_DATE as string,",
				"          SALARY as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          FIRST_NAME,",
				"          LAST_NAME,",
				"          EMAIL,",
				"          HIRE_DATE",
				"     )) ~> sinkforErrorRow"
			]
		}
	}
}