{
	"name": "fixedlenthsizedfileprocess",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DSADLLSSourceIPwithFile",
						"type": "DatasetReference"
					},
					"name": "Gettextfile"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "Addcolumn"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Gettextfile",
				"Gettextfile derive(empid = substring(Column_1,1,4)) ~> Addcolumn"
			]
		}
	}
}