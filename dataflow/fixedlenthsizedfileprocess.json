{
	"name": "fixedlenthsizedfileprocess",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DSADLLSSourceIPwithFile",
						"type": "DatasetReference"
					},
					"name": "Gettextfile"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dsblobforfileoutput",
						"type": "DatasetReference"
					},
					"name": "sinktoCSVfile"
				}
			],
			"transformations": [
				{
					"name": "Addcolumn"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Gettextfile",
				"Gettextfile derive(empid = substring(Column_1,1,4),",
				"          name = substring(Column_1,5,9),",
				"          state = substring(Column_1,10,11),",
				"          salary = substring(Column_1,13,18)) ~> Addcolumn",
				"Addcolumn select(mapColumn(",
				"          empid,",
				"          name,",
				"          state,",
				"          salary",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinktoCSVfile"
			]
		}
	}
}