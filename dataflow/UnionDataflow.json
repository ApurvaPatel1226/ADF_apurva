{
	"name": "UnionDataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "dsadlscontainerxwithfile",
						"type": "DatasetReference"
					},
					"name": "sourceADLSfile1"
				},
				{
					"dataset": {
						"referenceName": "dsadlscontainerxwithfile",
						"type": "DatasetReference"
					},
					"name": "sourceADLSfile2"
				},
				{
					"dataset": {
						"referenceName": "dsadlscontainerxwithfile",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DSforSQLDest",
						"type": "DatasetReference"
					},
					"name": "sinktoUnionResults"
				}
			],
			"transformations": [
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as short,",
				"          name as string,",
				"          salary as integer,",
				"          gender as string,",
				"          deptno as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceADLSfile1",
				"source(output(",
				"          id as short,",
				"          name as string,",
				"          salary as integer,",
				"          gender as string,",
				"          deptno as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceADLSfile2",
				"source(output(",
				"          id as string,",
				"          name as string,",
				"          salary as string,",
				"          gender as string,",
				"          deptnio as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"sourceADLSfile1, sourceADLSfile2 union(byName: true)~> union1",
				"union1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          id,",
				"          name,",
				"          salary,",
				"          gender,",
				"          deptno",
				"     )) ~> sinktoUnionResults"
			]
		}
	}
}